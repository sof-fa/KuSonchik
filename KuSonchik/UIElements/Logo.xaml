<UserControl x:Class="KuSonchik.UIElements.Logo"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:KuSonchik.UIElements"
			 mc:Ignorable="d" 
			 d:DesignHeight="35" d:DesignWidth="200">
    <Border 
		Background="{StaticResource TertiaryBrush}"
		CornerRadius="1"
        Padding="3"
		MaxWidth="130">
        <Border
			Background="{StaticResource SecondaryBrush}"
			HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
			CornerRadius="1" Padding="17,0">
            <Grid 
                HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="14*"/>
                    <RowDefinition Height="15*"/>
                </Grid.RowDefinitions>
                <Polygon
					Fill="{StaticResource TertiaryBrush}"
					Points="43.6, 2, 46, 2, 41, 10.8, 40, 10.8" Grid.RowSpan="2"/>
                <TextBlock 
					Text="KuSonchik" FontSize="20"
					Foreground="White"
					HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,1,0,0" Grid.RowSpan="2"/>
            </Grid>
        </Border>
    </Border>
</UserControl>